{
  "name": "tsjson",
  "version": "1.0.0",
  "description": "TypeScript JSON encoding/decoding",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc",
    "watch": "npx tsc -w",
    "test": "npx mocha --reporter spec --require ts-node/register 'tests/**/*.test.ts'",
    "coverage": "npx nyc --reporter=html --reporter=text mocha --require=ts-node/register --require=source-map-support/register --recursive 'tests/**/*.test.ts'"
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "html"
    ],
    "all": true  
  },
  "keywords": [
    "json",
    "encoding",
    "decoding",
    "encode",
    "decode",
    "typescript",
    "ts"
  ],
  "author": "Sergey Grabkovsky",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "chai": "^4.1.2",
    "istanbul": "^0.4.5",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "source-map-support": "^0.5.4",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "typescript": "^2.8.1"
  }
}
